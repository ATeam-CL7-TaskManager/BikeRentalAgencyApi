@model BikeRentalAgencyUI.Models.BikeStoreViewModel
@{
    ViewData["Title"] = "Index";
}

<h1>Bikes</h1>
<p>
    <a asp-action="Edit">Create New</a>
</p>

<form asp-controller="BikeStore" asp-action="Index" method="get">

    <select asp-for="SelectedStore" asp-items="Model.BikeStores">
        <option value="">All</option>
    </select>

    <input type="submit" value="Filter" />
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                BikeID
            </th>
            <th>
                StoreID
            </th>
            <th>
                HourlyRate
            </th>
            <th>
               Price
            </th>
            <th>
                FrameSize
            </th>
            <th>
                Motor
            </th>
            <th>
                MTBSuspension
            </th>
            <th>
                AllTerrainTires
            </th>
            <th>
                BikeStyle
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Bikes)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.BikeID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StoreID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.HourlyRate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FrameSize)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Motorized)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MTBSuspension)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AllTerrainTires)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BikeStyle)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.BikeID }) |
                    @Html.ActionLink("Details", "Details", new { id = item.BikeID }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.BikeID })
                </td>
            </tr>
        }
    </tbody>
</table>